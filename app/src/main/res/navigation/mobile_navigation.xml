<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.sf.jetpack.mymov.fragment.movie.MoviesFragment"
        android:label="@string/title_movie"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.sf.jetpack.mymov.fragment.tvshow.TvShowsFragment"
        android:label="@string/title_tv_show"
        tools:layout="@layout/fragment_tv_shows" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sf.jetpack.mymov.fragment.favorite.FavoriteFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_favorite" />
